{
  "version": "1.0.0",
  "source": "./index.html",
  "type": "module",
  "name": "MineGuard",
  "description": "A MineGuard Web App, built with React and Tailwind CSS, and use to manage the Mine System",
  "scripts": {
    "dev": "concurrently \"npm:dev:frontend\" \"npm:dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "npm start --prefix server",
    "dev:setup": "npm run dev",
    "setup": "node setup.js",
    "build": "vite build",
    "start": "npm run dev:backend",
    "install:all": "npm install && npm install --prefix server",
    "deploy": "npm run build && npm run start",
    "deploy:prod": "npm run build && npm run start:prod",
    "start:prod": "NODE_ENV=production npm start --prefix server"
  },
  "dependencies": {
    "@civic/auth": "*",
    "@google/genai": "^1.6.0",
    "@radix-ui/react-avatar": "^1.1.1",
    "@radix-ui/react-navigation-menu": "^1.2.1",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@types/jspdf": "^1.3.3",
    "@types/qrcode": "^1.5.5",
    "@types/react-router-dom": "^5.3.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "2.1.1",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "jsqr": "^1.4.0",
    "lucide-react": "^0.453.0",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.1",
    "tailwind-merge": "2.5.4"
  },
  "devDependencies": {
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.0",
    "@vitejs/plugin-react": "4.3.4",
    "concurrently": "^9.1.2",
    "esbuild": "0.24.0",
    "globals": "15.12.0",
    "tailwindcss": "3.4.16",
    "vite": "6.0.4"
  },
  "alias": {
    "@/*": "./src/components/ui/$1"
  }
}
